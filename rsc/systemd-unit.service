[Unit]
Description=DHCP server for rouge access point
After=dbus.service
Requires=dbus.service

[Service]
Type=dbus
BusName=com.dhcpserver.DHCPServer
ExecStart=/usr/sbin/dhcpserverd /etc/rouge-access-point/components/dhcp-server.ini
Restart=on-failure
User=root
Group=root

[Install]
WantedBy=multi-user.target
